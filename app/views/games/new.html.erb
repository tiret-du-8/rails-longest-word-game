




<div class="m-5">
  <h2>Welcome to the game !</h2>
  <p>Here is your grid :</p>
  <div class="d-flex justify-content-start">
    <% @letters.each do |letter| %>
      <div class="card shadow p-3 mb-5 bg-white rounded text-center text-uppercase font-weight-bold px-4 mx-2">
      <%= letter %>
      </div>
    <% end %>
  </div>

  <div class="form-row blockquote pb-2">
  <p>What's the longest word you can find ?</p>
    <form class="d-flex my-2" action="score" method="post" data-turbo="false">
      <div class="col-10 form-group">
        <input class="form-control" type="text" name="word" placeholder="Your word here">
      </div>
      <div class="col-auto form-group mx-2">
        <input class="btn btn-warning" type="submit" value="Play!">
      </div>
    <%= hidden_field_tag :letters, @letters %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>
  </div>
</div>
